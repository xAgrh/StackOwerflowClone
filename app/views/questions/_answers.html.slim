-@question.answers.each do |answer|
  .answer
    = answer.body
    .edit-answer*{ :id => "answer-#{answer.id}" }
      - if user_signed_in? && answer.persisted? && answer.user == current_user
        = link_to 'Редактировать',edit_question_answer_path(answer.question, answer),remote: true
        ' |
        = link_to 'Удалить', question_answer_path(answer.question.id, answer.id), :method => :delete, data: {:confirm => 'Вы уверены, что хотите удалить ответ?'}